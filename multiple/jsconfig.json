{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "public": [
                "src/public"
            ],
            "public/*": [
                "src/public/*"
            ],
            "components": [
                "src/public/components"
            ],
            "components/*": [
                "src/public/components/*"
            ],
            "communal": [
                "src/module/communal"
            ],
            "communal/*": [
                "src/module/communal/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "src/html"
    ]
}
